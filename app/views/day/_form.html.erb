<%= form_for @day, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :day_num, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :day_num, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                day_path, :class => 'btn' %>
  </div>
<% end %>
